{
  "include": ["src/**/*", "*.config.js", "*.config.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2015"
  }
}
